{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*" // 允许所有域名访问，如果只想允许特定域名，可以改为 "https://your-domain.com"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, content-type, Authorization"
        }
      ]
    },
    {
      "source": "/assets/(.*)", // 针对特定资源路径（如果你的图片在 /assets/ 目录下）
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
	{
      "source": "/images/(.*)", // 针对特定资源路径（如果你的图片在 /images/ 目录下）
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}